-- Mobile notification size
local notifWidth = isMobile and 260 or 310
local notifHeight = isMobile and 65 or 75

-- Notification function (smooth slide from right to left)
local notifCount = 0
local function showNotification(title, text, color, duration)
    duration = duration or 3
    color = color or Color3.fromRGB(161, 46, 255)
    notifCount = notifCount + 1
    
    local NotifFrame = Instance.new("Frame")
    NotifFrame.Name = "Notification" .. notifCount
    NotifFrame.Parent = NotifContainer
    NotifFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
    NotifFrame.BackgroundTransparency = 1
    NotifFrame.BorderSizePixel = 0
    NotifFrame.Size = UDim2.new(0, notifWidth, 0, notifHeight)
    NotifFrame.Position = UDim2.new(1, 50, 0, 0)
    NotifFrame.LayoutOrder = -notifCount
    NotifFrame.ClipsDescendants = true
    
    local NotifCorner = Instance.new("UICorner")
    NotifCorner.CornerRadius = UDim.new(0, 10)
    NotifCorner.Parent = NotifFrame
    
    local NotifStroke = Instance.new("UIStroke")
    NotifStroke.Color = color
    NotifStroke.Thickness = 2
    NotifStroke.Transparency = 1
    NotifStroke.Parent = NotifFrame
    
    local ColorBar = Instance.new("Frame")
    ColorBar.Name = "ColorBar"
    ColorBar.Parent = NotifFrame
    ColorBar.BackgroundColor3 = color
    ColorBar.BackgroundTransparency = 1
    ColorBar.BorderSizePixel = 0
    ColorBar.Position = UDim2.new(0, 0, 0, 0)
    ColorBar.Size = UDim2.new(0, 4, 1, 0)
    
    local ColorBarCorner = Instance.new("UICorner")
    ColorBarCorner.CornerRadius = UDim.new(0, 2)
    ColorBarCorner.Parent = ColorBar
    
    local NotifTitle = Instance.new("TextLabel")
    NotifTitle.Name = "Title"
    NotifTitle.Parent = NotifFrame
    NotifTitle.BackgroundTransparency = 1
    NotifTitle.Position = UDim2.new(0, 14, 0, 10)
    NotifTitle.Size = UDim2.new(1, -24, 0, 22)
    NotifTitle.Font = Enum.Font.GothamBold
    NotifTitle.Text = title
    NotifTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
    NotifTitle.TextTransparency = 1
    NotifTitle.TextSize = isMobile and 15 or 17
    NotifTitle.TextXAlignment = Enum.TextXAlignment.Left
    
    local NotifText = Instance.new("TextLabel")
    NotifText.Name = "Text"
    NotifText.Parent = NotifFrame
    NotifText.BackgroundTransparency = 1
    NotifText.Position = UDim2.new(0, 14, 0, 34)
    NotifText.Size = UDim2.new(1, -24, 0, 35)
    NotifText.Font = Enum.Font.Gotham
    NotifText.Text = text
    NotifText.TextColor3 = Color3.fromRGB(190, 190, 190)
    NotifText.TextTransparency = 1
    NotifText.TextSize = isMobile and 12 or 14
    NotifText.TextXAlignment = Enum.TextXAlignment.Left
    NotifText.TextWrapped = true
    NotifText.TextYAlignment = Enum.TextYAlignment.Top
    
    -- Smooth slide in from right to left
    local tweenInfo = TweenInfo.new(0.6, Enum.EasingStyle.Quint, Enum.EasingDirection.Out)
    
    local tweenPos = TweenService:Create(NotifFrame, tweenInfo, {
        Position = UDim2.new(0, 0, 0, 0),
        BackgroundTransparency = 0.05
    })
    
    local tweenStroke = TweenService:Create(NotifStroke, tweenInfo, {
        Transparency = 0.3
    })
    
    local tweenBar = TweenService:Create(ColorBar, tweenInfo, {
        BackgroundTransparency = 0
    })
    
    local tweenTitle = TweenService:Create(NotifTitle, tweenInfo, {
        TextTransparency = 0
    })
    
    local tweenText = TweenService:Create(NotifText, tweenInfo, {
        TextTransparency = 0
    })
    
    tweenPos:Play()
    tweenStroke:Play()
    tweenBar:Play()
    tweenTitle:Play()
    tweenText:Play()
    
    -- Smooth slide out to right after duration
    task.delay(duration, function()
        local tweenOutInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quint, Enum.EasingDirection.In)
        
        local tweenOutPos = TweenService:Create(NotifFrame, tweenOutInfo, {
            Position = UDim2.new(1, 50, 0, 0),
            BackgroundTransparency = 1
        })
        
        local tweenOutStroke = TweenService:Create(NotifStroke, tweenOutInfo, {
            Transparency = 1
        })
        
        local tweenOutBar = TweenService:Create(ColorBar, tweenOutInfo, {
            BackgroundTransparency = 1
        })
        
        local tweenOutTitle = TweenService:Create(NotifTitle, tweenOutInfo, {
            TextTransparency = 1
        })
        
        local tweenOutText = TweenService:Create(NotifText, tweenOutInfo, {
            TextTransparency = 1
        })
        
        tweenOutPos:Play()
        tweenOutStroke:Play()
        tweenOutBar:Play()
        tweenOutTitle:Play()
        tweenOutText:Play()
        
        tweenOutPos.Completed:Connect(function()
            NotifFrame:Destroy()
        end)
    end)
end

