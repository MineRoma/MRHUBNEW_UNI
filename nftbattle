local auto = 0
local smartFarmActive = false
local selectedCase = "Gold" -- –ò–∑–Ω–∞—á–∞–ª—å–Ω–æ –≤—ã–±—Ä–∞–Ω–Ω—ã–π –∫–µ–π—Å

-- –¶–µ–Ω—ã –Ω–∞ 10 –∫–µ–π—Å–æ–≤ 
local CASE_PRICES = {
    ["Gold"] = 19990, 
    ["Manager"] = 8350,
    ["Office Clerk"] = 6890,
    ["Plodder"] = 4440,
    ["Beggar"] = 2200,
    ["Trash"] = 0, 
}

-- –ü—Ä–∏–æ—Ä–∏—Ç–µ—Ç –∫–µ–π—Å–æ–≤: –æ—Ç —Å–∞–º–æ–≥–æ –¥–æ—Ä–æ–≥–æ–≥–æ –∫ —Å–∞–º–æ–º—É –¥–µ—à–µ–≤–æ–º—É
local CASE_PRIORITY = {
    "Gold", "Manager", "Office Clerk", "Plodder", "Beggar", "Trash"
}

-- =========================================================================
-- !!! –§–£–ù–ö–¶–ò–Ø –ü–û–õ–£–ß–ï–ù–ò–Ø –ë–ê–õ–ê–ù–°–ê (–ù–ê–î–ï–ñ–ù–ê–Ø) !!!
-- =========================================================================
local function getPlayerMoney()
    local player = game.Players.LocalPlayer
    local moneyValue = 0

    -- –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –≤–∞—à–µ–≥–æ –ø—É—Ç–∏ –∫ –±–∞–ª–∞–Ω—Å—É: game.Players.LocalPlayer.PlayerGui.MainGui.TopFrame.Balance.SubVal
    local success, moneyObject = pcall(function()
        return player.PlayerGui.MainGui.TopFrame.Balance.SubVal
    end)
    
    if success and moneyObject then
        -- –ß–∏—Ç–∞–µ–º .Value –∏ –∫–æ–Ω–≤–µ—Ä—Ç–∏—Ä—É–µ–º –≤ —á–∏—Å–ª–æ
        local value = tonumber(moneyObject.Value)
        if value ~= nil then [cite: 4]
            moneyValue = value
        end
    end

    return moneyValue 
end

-- =========================================================================
-- !!! –§–£–ù–ö–¶–ò–Ø –û–°–ù–û–í–ù–û–ì–û –¶–ò–ö–õ–ê SMART FARM (–õ–û–ì–ò–ö–ê –ê–í–¢–û–§–ê–†–ú–ê) !!!
-- =========================================================================
local smartFarmThread = nil 
local function runSmartFarm()
    while smartFarmActive do
        local currentMoney = getPlayerMoney()
        local caseFound = false
        
        -- –¶–∏–∫–ª –≤—Å–µ–≥–¥–∞ –Ω–∞—á–∏–Ω–∞–µ—Ç –ø—Ä–æ–≤–µ—Ä–∫—É —Å —Å–∞–º–æ–≥–æ –¥–æ—Ä–æ–≥–æ–≥–æ –∫–µ–π—Å–∞
        for _, caseName in ipairs(CASE_PRIORITY) do
            local cost = CASE_PRICES[caseName] [cite: 7]
            
            -- *** –ü–†–û–í–ï–†–ö–ê: –ï–°–õ–ò –î–ï–ù–ï–ì –•–í–ê–¢–ê–ï–¢, –¢–û –ö–£–ü–ò–¢ ***
            if currentMoney >= cost then
                
                -- 1. –û—Ç–∫—Ä—ã—Ç–∏–µ 10 –∫–µ–π—Å–æ–≤
                local argsOpen = { caseName, 10 } [cite: 8]
                game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("OpenCase"):InvokeServer(unpack(argsOpen))
                
                wait(0.1) 
                
                -- 2. –ü—Ä–æ–¥–∞–∂–∞ –≤—Å–µ–≥–æ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è —Å—Ä–∞–∑—É
                local argsSell = { "Sell", "ALL" } [cite: 9]
                game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("Inventory"):FireServer(unpack(argsSell))
                
                Rayfield:Notify({
                   Title = "AutoFarm Stars", [cite: 10]
                   Content = "–ö—É–ø–ª–µ–Ω –∫–µ–π—Å: "..caseName, [cite: 10]
                   Duration = 1.0,
                })

                caseFound = true
                break [cite: 11]
            end
        end
        
        if not caseFound then
            Rayfield:Notify({
               Title = "Smart Farm",
               Content = "–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –¥–µ–Ω–µ–≥ –¥–∞–∂–µ –Ω–∞ Beggar. –ñ–¥–µ–º 3 —Å–µ–∫.", [cite: 12]
               Duration = 3.0,
            })
            wait(3) 
        else
            wait(2.5) -- –£–≤–µ–ª–∏—á–µ–Ω–Ω–∞—è –ø–∞—É–∑–∞ –ø–æ—Å–ª–µ —É—Å–ø–µ—à–Ω–æ–π –ø–æ–∫—É–ø–∫–∏
        end
    end
end

-- =========================================================================
-- !!! –§–£–ù–ö–¶–ò–Ø –î–õ–Ø –ö–ù–û–ü–û–ö –ú–ê–ù–£–ê–õ–¨–ù–û–ì–û –§–ê–†–ú–ê (–ò–°–ü–û–õ–¨–ó–£–ï–¢ selectedCase) !!!
-- =========================================================================
local function runCaseFarm(count)
    local caseToFarm = selectedCase 
    local runs = count / 10 
    local currentRun = 0
    local startTime = tick()
    
    if caseToFarm == "Trash" then
       Rayfield:Notify({Title = "Case Farm", Content = "–î–ª—è Trash –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ –∫–Ω–æ–ø–∫–∏ –Ω–∏–∂–µ.", Duration = 4.0})
       return
    end

    while currentRun < runs do
        -- 1. –û—Ç–∫—Ä—ã—Ç–∏–µ 10 –∫–µ–π—Å–æ–≤
        local argsOpen = { caseToFarm, 10 }
        game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("OpenCase"):InvokeServer(unpack(argsOpen))
        
        wait(0.1) 
        
        -- 2. –ü—Ä–æ–¥–∞–∂–∞ –≤—Å–µ–≥–æ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è —Å—Ä–∞–∑—É
        local argsSell = { "Sell", "ALL" }
        game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("Inventory"):FireServer(unpack(argsSell))
        
        currentRun = currentRun + 1
        wait(1) 
    end
    
    Rayfield:Notify({
        Title = "Case Farm Complete",
        Content = string.format("–ó–∞–≤–µ—Ä—à–µ–Ω–æ %d –∫–µ–π—Å–æ–≤ %s –∑–∞ %.1f —Å–µ–∫.", count, caseToFarm, tick() - startTime),
        Duration = 5.0,
    })
end

-- =========================================================================
-- !!! –§–£–ù–ö–¶–ò–Ø –î–õ–Ø TRASH –ö–ï–ô–°–û–í (–°–û –°–ß–ï–¢–ß–ò–ö–û–ú) !!!
-- =========================================================================
local function runTrashFarm(target)
    auto = 0 
    local startTime = tick()

    while true do
        local args = { "Trash", 10 } [cite: 24]
        game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("OpenCase"):InvokeServer(unpack(args))
        local args = { "Sell", "ALL" } [cite: 25]
        game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("Inventory"):FireServer(unpack(args))
        wait(1)
        auto += 1
        if auto == target then auto = 0; break end [cite: 22, 23, 26]
    end

    Rayfield:Notify({
        Title = "Trash Farm Complete",
        Content = string.format("–ó–∞–≤–µ—Ä—à–µ–Ω–æ %d –∫–µ–π—Å–æ–≤ Trash –∑–∞ %.1f —Å–µ–∫.", target * 10, tick() - startTime),
        Duration = 5.0,
    })
end

