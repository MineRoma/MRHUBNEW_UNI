-- !!! –í–ö–õ–ê–î–ö–ê AutoFarm (–°–ú–ê–†–¢ –ò –ú–ê–ù–£–ê–õ–¨–ù–´–ô –§–ê–†–ú) !!!
-- =========================================================================

-- 1. SMART AUTO-FARM GUI (–û—Ä–∏–≥–∏–Ω–∞–ª—å–Ω—ã–π –∫–æ–¥)
local LabelSmart = TabSmart:CreateLabel("Farm stars")
TabSmart:CreateButton({
   Name = "–ó–∞–ø—É—Å—Ç–∏—Ç—å AutoFarm Stars",
   Callback = function()
       if not smartFarmActive then
            smartFarmActive = true
            Rayfield:Notify({Title = "AutoFarm Stars", Content = "AutoFarm Stars –∑–∞–ø—É—â–µ–Ω! –°—Ç–∞—Ä–∞—é—Å—å –±—ã—Ç—å –Ω–µ –±–µ–∑–¥–∞—Ä–µ–º –∏ —Ñ–∞—Ä–º–∏—Ç—å –Ω–æ—Ä–º–∞–ª—å–Ω–æ.", Duration = 3})
            smartFarmThread = spawn(runSmartFarm) 
        else
            Rayfield:Notify({Title = "AutoFarm Stars", Content = "AutoFarm Stars –±—ã–ª —É–∂–µ –∑–∞–ø—É—â–µ–Ω! –î—É—Ä–∞—á–µ–ª–æ.", Duration = 2})
        end
   end,
})

TabSmart:CreateButton({
   Name = "–û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å AutoFarm Stars",
   Callback = function()
        if smartFarmActive then
            smartFarmActive = false
            Rayfield:Notify({Title = "AutoFarm Stars", Content = "AutoFarm Stars –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω :(.", Duration = 2})
            smartFarmThread = nil
        else
            Rayfield:Notify({Title = "AutoFarm Stars", Content = "–ß—Ç–æ —Ç–æ —Ç—É—Ç –Ω–µ —Ç–∞–∫... –ë—Ä–æ —Ç—ã –µ–≥–æ –¥–∞–∂–µ –Ω–µ –∑–∞–ø—É—Å–∫–∞–ª.", Duration = 2})
        end
   end,
})

TabSmart:CreateLabel("---")
TabSmart:CreateLabel("üì¶ Case Farm (–í—ã–±–µ—Ä–∏ –∫–µ–π—Å –∏ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ):")

-- *** DROPDOWN –î–õ–Ø –í–´–ë–û–†–ê –ö–ï–ô–°–ê ***
TabSmart:CreateDropdown({
    Name = "–í—ã–±—Ä–∞—Ç—å –ö–µ–π—Å",
    Options = {"Gold", "Manager", "Office Clerk", "Plodder", "Beggar", "Trash"},
    Current = selectedCase,
    Callback = function(value)
        selectedCase = value
        Rayfield:Notify({
            Title = "–í—ã–±–æ—Ä –ö–µ–π—Å–∞",
            Content = "–í—ã–±—Ä–∞–Ω –∫–µ–π—Å: "..selectedCase,
            Duration = 2.0,
        })
    end,
})

-- *** –£–ù–ò–§–ò–¶–ò–†–û–í–ê–ù–ù–´–ï –ö–ù–û–ü–ö–ò –ú–ê–ù–£–ê–õ–¨–ù–û–ì–û –§–ê–†–ú–ê ***
-- runsToBreak - –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ü–∏–∫–ª–æ–≤, 1 —Ü–∏–∫–ª = 10 –∫–µ–π—Å–æ–≤.
TabSmart:CreateButton({ Name = "–§–∞—Ä–º 1–ú–õ–ù –∫–µ–π—Å–æ–≤", Callback = function() runManualCaseFarm(100000) end, })
TabSmart:CreateButton({ Name = "–§–∞—Ä–º 100–ö –∫–µ–π—Å–æ–≤", Callback = function() runManualCaseFarm(10000) end, })
TabSmart:CreateButton({ Name = "–§–∞—Ä–º 10–ö –∫–µ–π—Å–æ–≤", Callback = function() runManualCaseFarm(1000) end, })
TabSmart:CreateButton({ Name = "–§–∞—Ä–º 1–ö –∫–µ–π—Å–æ–≤", Callback = function() runManualCaseFarm(100) end, })
TabSmart:CreateButton({ Name = "–§–∞—Ä–º 100 –∫–µ–π—Å–æ–≤", Callback = function() runManualCaseFarm(10) end, })
TabSmart:CreateButton({ Name = "–§–∞—Ä–º 10 –∫–µ–π—Å–æ–≤", Callback = function() runManualCaseFarm(1) end, })


