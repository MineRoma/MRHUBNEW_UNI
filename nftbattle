-- =========================================================================
-- !!! –§–ò–ö–° –ó–ê–ì–†–£–ó–ö–ò: –£–î–ê–õ–ï–ù –ü–†–û–ë–õ–ï–ú–ù–´–ô –ü–ê–†–ê–ú–ï–¢–† –ò–ó GET !!!
-- =========================================================================
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- =========================================================================
-- !!! –ì–õ–û–ë–ê–õ–¨–ù–´–ï –ù–ê–°–¢–†–û–ô–ö–ò –§–ê–†–ú–ê –ò –ü–ï–†–ï–ú–ï–ù–ù–´–ï GUI !!!
-- =========================================================================
local auto = 0
local smartFarmActive = false 
local selectedCase = "Gold" -- –ü–µ—Ä–µ–º–µ–Ω–Ω–∞—è –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è –≤—ã–±—Ä–∞–Ω–Ω–æ–≥–æ –∫–µ–π—Å–∞

-- –¶–µ–Ω—ã –Ω–∞ 10 –∫–µ–π—Å–æ–≤ 
local CASE_PRICES = {
    ["Gold"] = 19990, 
    ["Manager"] = 8350,
    ["Office Clerk"] = 6890,
    ["Plodder"] = 4440,
    ["Beggar"] = 2200,
    ["Trash"] = 0, -- Trash –≤—Å–µ–≥–¥–∞ –±–µ—Å–ø–ª–∞—Ç–Ω—ã–π
}

-- –ü—Ä–∏–æ—Ä–∏—Ç–µ—Ç –∫–µ–π—Å–æ–≤: –æ—Ç —Å–∞–º–æ–≥–æ –¥–æ—Ä–æ–≥–æ–≥–æ –∫ —Å–∞–º–æ–º—É –¥–µ—à–µ–≤–æ–º—É
local CASE_PRIORITY = {
    "Gold", "Manager", "Office Clerk", "Plodder", "Beggar", "Trash"
}

-- =========================================================================
-- !!! –§–£–ù–ö–¶–ò–Ø –ü–û–õ–£–ß–ï–ù–ò–Ø –ë–ê–õ–ê–ù–°–ê (–ù–ê–î–ï–ñ–ù–ê–Ø) !!!
-- =========================================================================
local function getPlayerMoney()
    local player = game.Players.LocalPlayer
    local moneyValue = 0

    -- –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –≤–∞—à–µ–≥–æ –ø—É—Ç–∏ –∫ –±–∞–ª–∞–Ω—Å—É: game.Players.LocalPlayer.PlayerGui.MainGui.TopFrame.Balance.SubVal
    local success, moneyObject = pcall(function()
        return player.PlayerGui.MainGui.TopFrame.Balance.SubVal
    end)
    
    if success and moneyObject then
        -- –ß–∏—Ç–∞–µ–º .Value –∏ –∫–æ–Ω–≤–µ—Ä—Ç–∏—Ä—É–µ–º –≤ —á–∏—Å–ª–æ
        local value = tonumber(moneyObject.Value)
        if value ~= nil then
            moneyValue = value
        end
    end

    return moneyValue 
end

-- =========================================================================
-- !!! –§–£–ù–ö–¶–ò–Ø –û–°–ù–û–í–ù–û–ì–û –¶–ò–ö–õ–ê SMART FARM !!!
-- =========================================================================
local smartFarmThread = nil 
local function runSmartFarm()
    while smartFarmActive do
        local currentMoney = getPlayerMoney()
        local caseFound = false
        
        for _, caseName in ipairs(CASE_PRIORITY) do
            local cost = CASE_PRICES[caseName]
            
            if currentMoney >= cost then
                
                -- 1. –û—Ç–∫—Ä—ã—Ç–∏–µ 10 –∫–µ–π—Å–æ–≤
                local argsOpen = { caseName, 10 }
                game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("OpenCase"):InvokeServer(unpack(argsOpen))
                
                wait(0.1) 
                
                -- 2. –ü—Ä–æ–¥–∞–∂–∞ –≤—Å–µ–≥–æ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è —Å—Ä–∞–∑—É
                local argsSell = { "Sell", "ALL" }
                game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("Inventory"):FireServer(unpack(argsSell))
                
                Rayfield:Notify({
                   Title = "AutoFarm Stars", 
                   Content = "–ö—É–ø–ª–µ–Ω –∫–µ–π—Å: "..caseName,
                   Duration = 1.0,
                })

                caseFound = true
                break 
            end
        end
        
        if not caseFound then
            Rayfield:Notify({
               Title = "Smart Farm",
               Content = "–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –¥–µ–Ω–µ–≥ –¥–∞–∂–µ –Ω–∞ Beggar. –ñ–¥–µ–º 3 —Å–µ–∫.",
               Duration = 3.0,
            })
            wait(3) 
        else
            wait(2.5) 
        end
    end
end

-- =========================================================================
-- !!! –ù–û–í–ê–Ø –§–£–ù–ö–¶–ò–Ø –î–õ–Ø –ú–ê–ù–£–ê–õ–¨–ù–û–ì–û –§–ê–†–ú–ê (–ò–°–ü–û–õ–¨–ó–£–ï–¢ selectedCase) !!!
-- =========================================================================
local function runManualCaseFarm(runsToBreak)
    local caseToFarm = selectedCase
    auto = 0

    -- runsToBreak - —ç—Ç–æ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ü–∏–∫–ª–æ–≤, –∫–∞–∂–¥—ã–π —Ü–∏–∫–ª –æ—Ç–∫—Ä—ã–≤–∞–µ—Ç 10 –∫–µ–π—Å–æ–≤.
    while true do
        local argsOpen = { caseToFarm, 10 }
        game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("OpenCase"):InvokeServer(unpack(argsOpen))
        
        local argsSell = { "Sell", "ALL" }
        game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("Inventory"):FireServer(unpack(argsSell))
        
        wait(1)
        auto += 1
        if auto == runsToBreak then auto = 0; break end
    end
    
    Rayfield:Notify({
        Title = "Case Farm",
        Content = string.format("–ó–∞–≤–µ—Ä—à–µ–Ω–æ %d –∫–µ–π—Å–æ–≤ %s.", runsToBreak * 10, caseToFarm),
        Duration = 3.0,
    })
end


